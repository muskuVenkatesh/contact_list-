<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/d3626d7984.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
           <h1 id="page-heading">
            <i class="fa-solid fa-address-card fa-bounce"></i>
            My ContactList</h1>
        <div id="contact-list-container">
            <ul>
                   
                <% for (let i of contact_list) { %> 
                    
                    <li class="contact">
                        <div class="details">
                        <p><%= i.name %></p>

                        <p><%= i.phone %></p>
                        </div>
                        <div class="delete-button">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fa-solid fa-trash fa-shake fa-lg" style="color: #e60f0f;"></i>
                            </a>

                        </div>
                    </li>
                    
                <% } %>
            </ul>
        </div>

        <form id="contact-form" action="/create-contact" method="POST">
            <div id="add-contact">
            <input id="name" type="text" name="name" placeholder="Enter name" required>
            <input id="phone" type="number" name="phone" placeholder="Enter phone" required>
            <button id="submit" vtype="submit">Add contact</button>
            </div>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>